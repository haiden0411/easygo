  <resultMap id="ItemCatMap" type="ItemCat">
    <id property="id" column="id" />
    <result column="name" property="name"/>
    <result column="del" property="del" />
   <association property="typeTemplate" javaType="TypeTemplate">
    <id column="type_id" property="id" />
     <result column="typename" property="name" />
   </association>
  </resultMap>

  <sql id="Base_Column_List">
    id, parent_id, `name`, type_id, del
  </sql>
  <select id="getItemCatById" parameterType="integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from tb_item_cat
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="integer">
    delete from tb_item_cat
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="ItemCat" useGeneratedKeys="true">
    insert into tb_item_cat (parent_id, `name`, type_id, 
      del)
    values (#{parentId,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{typeId,jdbcType=BIGINT}, 
      #{del,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="ItemCat" useGeneratedKeys="true">
    insert into tb_item_cat
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="parentId != null">
        parent_id,
      </if>
      <if test="name != null">
        `name`,
      </if>
      <if test="typeId != null">
        type_id,
      </if>
      <if test="del != null">
        del,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="parentId != null">
        #{parentId,jdbcType=BIGINT},
      </if>
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="typeId != null">
        #{typeId,jdbcType=BIGINT},
      </if>
      <if test="del != null">
        #{del,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="ItemCat">
    update tb_item_cat
    <set>
      <if test="parentId != null">
        parent_id = #{parentId,jdbcType=BIGINT},
      </if>
      <if test="name != null">
        `name` = #{name,jdbcType=VARCHAR},
      </if>
      <if test="typeId != null">
        type_id = #{typeId,jdbcType=BIGINT},
      </if>
      <if test="del != null">
        del = #{del,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  <update id="updateByPrimaryKey" parameterType="ItemCat">
    update tb_item_cat
    set parent_id = #{parentId,jdbcType=BIGINT},
      `name` = #{name,jdbcType=VARCHAR},
      type_id = #{typeId,jdbcType=BIGINT},
      del = #{del,jdbcType=INTEGER}
    where id = #{id,jdbcType=BIGINT}
  </update>
  
  <select id="getTotalCount" resultType="integer">
        select count(1) from tb_item_cat where del = 0 and parent_id = ${parentId}
  </select>

  <select id="getItemCatsByPage" resultMap="ItemCatMap" >
    select a.*,b.`name` as 'typename' from tb_item_cat a inner join tb_type_template b on a.type_id = b.id and a.del = 0 and a.parent_id = #{parentId} order by a.id desc limit #{pageStart},#{pageSize}
  </select>

</mapper>